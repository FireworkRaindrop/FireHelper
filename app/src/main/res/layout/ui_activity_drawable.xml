<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.android.drawable.DrawableActivity">

    <include
        android:id="@+id/ui_activity_drawable_toolbar"
        layout="@layout/toolbar_with_article" />

    <ImageView
        android:id="@+id/ui_activity_drawable_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ui_activity_drawable_toolbar" />
</android.support.constraint.ConstraintLayout>