<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ui_activity_drawable_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/ui_activity_drawable_vector_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ui_activity_drawable_iv"
        app:srcCompat="@drawable/ic_audiotrack_green_32dp" />

    <ImageView
        android:id="@+id/ui_activity_drawable_avd_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ui_activity_drawable_vector_iv"
        app:srcCompat="@drawable/ic_radio_button_green_32dp" />
</android.support.constraint.ConstraintLayout>