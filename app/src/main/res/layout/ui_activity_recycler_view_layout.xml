<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.layout.recyclerview.RecyclerViewActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ui_activity_recycler_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/gray"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ui_activity_recycler_view_frame_layout"></android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/ui_activity_recycler_view_frame_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toRightOf="@id/ui_activity_recycler_view"
        app:layout_constraintRight_toRightOf="parent"></FrameLayout>
</android.support.constraint.ConstraintLayout>