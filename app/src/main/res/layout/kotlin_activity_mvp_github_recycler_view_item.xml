<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="6dp"
    android:foreground="?android:selectableItemBackground"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/kotlin_activity_mvp_github_rv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/kotlin_activity_mvp_github_rv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/kotlin_activity_mvp_github_rv_title" />

        <TextView
            android:id="@+id/kotlin_activity_mvp_github_rv_star_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="star:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kotlin_activity_mvp_github_rv_desc" />

        <TextView
            android:id="@+id/kotlin_activity_mvp_github_rv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/kotlin_activity_mvp_github_rv_star_tv"
            app:layout_constraintRight_toLeftOf="@id/kotlin_activity_mvp_github_rv_fork_tv"
            app:layout_constraintTop_toBottomOf="@id/kotlin_activity_mvp_github_rv_desc" />

        <TextView
            android:id="@+id/kotlin_activity_mvp_github_rv_fork_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="fork:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/kotlin_activity_mvp_github_rv_star"
            app:layout_constraintRight_toLeftOf="@id/kotlin_activity_mvp_github_rv_fork"
            app:layout_constraintTop_toBottomOf="@id/kotlin_activity_mvp_github_rv_desc" />

        <TextView
            android:id="@+id/kotlin_activity_mvp_github_rv_fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/kotlin_activity_mvp_github_rv_fork"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kotlin_activity_mvp_github_rv_desc" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
