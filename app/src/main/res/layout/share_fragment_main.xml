<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/share_fragment_file_path_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" />

    <Button
        android:id="@+id/share_fragment_select_file_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="select file first"
        app:layout_constraintTop_toBottomOf="@id/share_fragment_file_path_tv" />

    <Button
        android:id="@+id/share_fragment_share_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="share"
        app:layout_constraintTop_toBottomOf="@id/share_fragment_select_file_bt" />
</androidx.constraintlayout.widget.ConstraintLayout>