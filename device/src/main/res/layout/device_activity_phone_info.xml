<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/device_activity_phone_info_toolbar"
        layout="@layout/toolbar_with_article" />

    <Button
        android:id="@+id/device_activity_phone_info_refresh_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/device_activity_phone_info_toolbar" />

    <TextView
        android:id="@+id/device_activity_phone_info_screen_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/device_activity_phone_info_refresh_bt" />

    <TextView
        android:id="@+id/device_activity_phone_info_battery_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/device_activity_phone_info_screen_tv" />

    <TextView
        android:id="@+id/device_activity_phone_info_connectivity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/device_activity_phone_info_battery_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>