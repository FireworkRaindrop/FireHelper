<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wyq.firehelper.ui.widget.edittext.multiedittext.MultiTextView
        android:id="@+id/ui_fragment_multi_edit_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <com.wyq.firehelper.ui.widget.edittext.multiedittext.MultiTextView
        android:id="@+id/ui_fragment_multi_edit_text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <com.wyq.firehelper.ui.widget.edittext.multiedittext.MultiTextView
        android:id="@+id/ui_fragment_multi_edit_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <com.wyq.firehelper.ui.widget.edittext.multiedittext.MultiTextView
        android:id="@+id/ui_fragment_multi_edit_text_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />


    <com.wyq.firehelper.ui.widget.edittext.limitcountedittext.CountEditTextLayout
        android:id="@+id/ui_fragment_count_limit_et"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:layout_width="match_parent"
            android:hint="字数限制"
            android:layout_height="wrap_content" />
    </com.wyq.firehelper.ui.widget.edittext.limitcountedittext.CountEditTextLayout>
</LinearLayout>
